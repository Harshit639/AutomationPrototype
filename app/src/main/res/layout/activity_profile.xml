<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile"
    android:background="@color/black">


  <ImageView
      android:id="@+id/imageView"
      android:layout_width="97dp"
      android:layout_height="82dp"
      android:layout_marginStart="41dp"
      android:layout_marginTop="48dp"
      android:layout_marginEnd="49dp"
      android:layout_marginBottom="80dp"
      app:layout_constraintBottom_toTopOf="@+id/pemail"
      app:layout_constraintEnd_toStartOf="@+id/pusername"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_baseline_account_circle_24" />

  <TextView
      android:id="@+id/pusername"
      android:layout_width="151dp"
      android:layout_height="34dp"
      android:layout_marginTop="70dp"
      android:layout_marginEnd="73dp"
      android:text="TextView"
      android:textColor="@color/backgroungColor"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/pemail"
      android:layout_width="333dp"
      android:layout_height="38dp"
      android:layout_marginStart="41dp"
      android:layout_marginTop="80dp"
      android:layout_marginEnd="37dp"
      android:text="Email      :  hs0080@srmist.ed.in"
      android:textColor="@color/backgroungColor"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView" />

  <TextView
      android:id="@+id/pdevices"
      android:layout_width="331dp"
      android:layout_height="40dp"
      android:layout_marginStart="43dp"
      android:layout_marginTop="22dp"
      android:layout_marginEnd="37dp"
      android:text="Devices :  5"
      android:textColor="@color/backgroungColor"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/pemail" />

  <TextView
      android:id="@+id/buttonregisterprofile"
      android:layout_width="156dp"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:layout_marginStart="127dp"
      android:layout_marginTop="64dp"
      android:layout_marginEnd="128dp"


      android:background="@drawable/gradient_row_bg"
      android:paddingLeft="40dp"
      android:paddingTop="10dp"
      android:text="Log Out"
      android:textColor="@color/white"
      android:textSize="18dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/pdevices" />
</androidx.constraintlayout.widget.ConstraintLayout>